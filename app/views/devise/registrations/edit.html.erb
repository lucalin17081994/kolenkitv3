
  <div class="container">
    <div class="card">
      <div class="card-body">

      <h2>Uw gegevens aanpassen</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label "Nieuw wachtwoord" %> <i>(leeglaten als u uw wachtwoord niet wilt veranderen)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> minimale aantal tekens</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label "Nieuw wachtwoord bevestigen" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label "Oud wachtwoord" %> <i>(ter bevestiging voor de veranderingen)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="field">
            <%= f.label :naam %><br />
            <%= f.text_field :name%>
          </div>
        <div class="field">
          <%= f.label :address %><br />
          <%= f.text_field :address%>
        </div>

          <div class="field">
            <%= f.label :telefoonnummer %><br />
            <%= f.text_field :number%>
          </div>
          

          <div class="actions">
            <%= f.submit "Update" %>
          </div>
        <% end %>

        <h3>Account Verwijderen</h3>

        <p>Ontevreden?<%= button_to "Account Verwijderen", registration_path(resource_name), data: { confirm: "Weet u het zeker?" }, method: :delete %></p>


        <div class="card">
          <%=render 'bestellingen'%>
        </div>
      </div>
    </div>
  </div>