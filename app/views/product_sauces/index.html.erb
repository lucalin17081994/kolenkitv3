<p id="notice"><%= notice %></p>

<h1>Product Sauces</h1>

<table>
  <thead>
    <tr>
      <th>ProductID</th>
      <th>Product</th>
      <th>SauceID</th>
      <th>Sauce</th>
      <th>Quantity</th>
      <th>TotalPrice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_sauces.each do |product_sauce| %>
      <tr>
        <td><%= product_sauce.product_id %></td>
        <td><%= product_sauce.product.name %></td>
        <td><%= product_sauce.sauce_id %></td>
        <td><%= product_sauce.sauce.name %></td>
        <td><%= product_sauce.quantity %></td>
        <td><%= product_sauce.price %></td>

        <td><%= link_to 'Show', product_sauce %></td>
        <td><%= link_to 'Edit', edit_product_sauce_path(product_sauce) %></td>
        <td><%= link_to 'Destroy', product_sauce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

